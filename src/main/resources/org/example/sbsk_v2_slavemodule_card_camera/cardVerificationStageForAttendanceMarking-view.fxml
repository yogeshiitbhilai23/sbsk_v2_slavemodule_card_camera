<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12"
            stylesheets="@../../../Styles/cardVerificationStyle.css"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.sbsk_v2_slavemodule_card_camera.CardVerificationStageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

